<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sales Transactions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="mt-3">Sales Transactions</h1>
    <h2>Total Revenue: $<%= totalRevenue.toFixed(2) %></h2>
    <a href="/" class="btn btn-primary mb-3">Return to Home</a>
    <table class="table mt-3">
        <tr><th>Item</th><th>Quantity Sold</th><th>Price Per Item</th><th>Total Sale Amount</th><th>Sale Date</th></tr>
        <% sales.forEach(sale => { %>
            <tr>
                <td><%= sale.item.name %></td>
                <td><%= sale.quantitySold %></td>
                <td>$<%= sale.pricePerItem.toFixed(2) %></td>
                <td>$<%= sale.totalSaleAmount.toFixed(2) %></td>
                <td><%= sale.saleDate.toLocaleString() %></td>
            </tr>
        <% }) %>
    </table>
</body>
</html>