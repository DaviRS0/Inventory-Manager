<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sell Inventory Item</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="mt-3">Sell Inventory Item</h1>
    <form action="/sales/sell" method="POST">
        <div class="mb-3">
            <label for="itemId" class="form-label">Item</label>
            <select class="form-control" id="itemId" name="itemId" required>
                <% items.forEach(item => { %>
                    <option value="<%= item.id %>"><%= item.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label for="quantitySold" class="form-label">Quantity Sold</label>
            <input type="number" class="form-control" id="quantitySold" name="quantitySold" required>
            <% if (errorMessage) { %>
                <div class="text-danger mt-2"><%= errorMessage %></div>
            <% } %>
        </div>
        <button type="submit" class="btn btn-primary">Sell Item</button>
    </form>
</body>
</html>